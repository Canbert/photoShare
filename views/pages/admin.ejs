<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>photoShare | Admin</title>

    <link rel="stylesheet" href="css/home.css">

</head>
<body ng-app="adminUsers" ng-controller="adminCtrl">

    <header>
        <% include ../partials/nav%>
    </header>

    <table>
        <thead>
            <tr>
                <th>User</th>
                <th>Privilege</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="user in users">
                <td>{{ user.username }}</td>
                <td>
                    <select ng-init="somethingHere = options[user.privilege]"
                            ng-model="somethingHere"
                            ng-options="option.name for option in options">
                    </select>
                </td>
                <td><button class="button" ng-click="">Update User</button></td>
            </tr>
        </tbody>
    </table>

    <% include ../partials/scripts%>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>

    <script src="js/controllers/adminController.js"></script>
    <script src="js/services/usersService.js"></script>
    <script src="js/adminCore.js"></script>

</body>
</html>