<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>photoShare | Cart</title>

    <link rel="stylesheet" href="/css/photo.css">

</head>
<body ng-app="photosCore" ng-controller="cartCtrl">

    <header>
        <% include ../partials/nav%>
    </header>


    <table ng-hide="photos.length == 0">
        <thead>
            <tr>
                <th width="200">Shopping Cart</th>
                <th></th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="photo in photos">
                <td><a href="/photo/{{photo._id}}"><img class="thumbnail" src="{{photo.url}}"></a></td>
                <td><a href="/photo/{{photo._id}}">{{ photo.name }}</a></td>
                <td>£{{ (photo.price / 100).toFixed(2)}}</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td>Subtotal: £{{ getTotal() }}</td>
            </tr>
        </tfoot>
    </table>

    <h1 class="text-center" ng-hide="photos.length > 0">Your cart is empty.</h1>

    <% include ../partials/scripts%>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular-cookies.js"></script>
    <script src="/js/services/photosService.js"></script> <!-- load up our controller -->
    <script src="/js/controllers/photosController.js"></script> <!-- load up our controller -->
    <script src="/js/photosCore.js"></script>
</body>
</html>